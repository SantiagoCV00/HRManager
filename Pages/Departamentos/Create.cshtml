@page
@model HRManager.Pages.Departamentos.CreateModel

@{
    ViewData["Title"] = "Crear Nuevo Departamento"; 
}

<div class="container mt-4">
    <div class="card shadow-sm p-4"> 
        <div class="card-header bg-primary text-white text-center rounded-top mb-4">
            <h1 class="h3 mb-0">
                <i class="bi bi-building-fill-add me-2"></i> @ViewData["Title"]
            </h1>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div> @* Resumen de errores *@

                <div class="mb-3"> 
                    <label asp-for="Departamento.NombreDepartamento" class="form-label"></label> @* Usar form-label *@
                    <input asp-for="Departamento.NombreDepartamento" class="form-control" />
                    <span asp-validation-for="Departamento.NombreDepartamento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Departamento.Ubicacion" class="form-label"></label>
                    <input asp-for="Departamento.Ubicacion" class="form-control" />
                    <span asp-validation-for="Departamento.Ubicacion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4"> 
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save-fill me-2"></i>Crear
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle-fill me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}