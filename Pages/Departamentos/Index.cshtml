@page
@model HRManager.Pages.Departamentos.IndexModel
@{
    ViewData["Title"] = "Lista de Departamentos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i>Crear Nuevo Departamento
        </a>
    </div>

    @if (Model.Departamentos == null || !Model.Departamentos.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            No hay departamentos registrados. ¡Crea uno nuevo para empezar!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover shadow-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre del Departamento</th>
                        <th>Ubicación</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Departamentos)
                    {
                        <tr>
                            <td>@item.NombreDepartamento</td>
                            <td>@item.Ubicacion</td>
                            <td class="text-center">
                                <a asp-page="Edit" asp-route-id="@item.IdDepartamento" class="btn btn-sm btn-success me-1" title="Editar Departamento">
                                    Editar
                                </a>
                                <a asp-page="Delete" asp-route-id="@item.IdDepartamento" class="btn btn-sm btn-danger" title="Eliminar Departamento">
                                    <i class="bi bi-trash-fill"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}