@page
@model HRManager.Pages.Departamentos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Departamento"; 
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h3 class="mb-0">Eliminar Departamento</h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger display-4"></i>
                        <h4 class="mt-3 text-danger">¿Estás seguro de que deseas eliminar este departamento?</h4>
                        <p class="lead">Esta acción es irreversible y no se puede deshacer.</p>
                    </div>

                    <hr />

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Departamento.NombreDepartamento):</dt>
                        <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.Departamento.NombreDepartamento)</strong></dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Departamento.Ubicacion):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Departamento.Ubicacion)</dd>

                       <dt class="col-sm-4 text-end">Empleados Asociados:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Departamento.Empleados != null && Model.Departamento.Empleados.Any())
                            {
                                <span class="badge bg-danger rounded-pill px-3 py-2">
                                    <i class="bi bi-people-fill me-1"></i> @Model.Departamento.Empleados.Count()
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill px-3 py-2">
                                    <i class="bi bi-person-slash me-1"></i> Ninguno
                                </span>
                            }
                        </dd> 
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Departamento.IdDepartamento" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger btn-lg" title="Confirmar eliminación">
                                <i class="bi bi-trash-fill me-2"></i>Eliminar
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary btn-lg" title="Cancelar eliminación">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}