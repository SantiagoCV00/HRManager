@page 
@model HRManager.Pages.Nominas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Nómina";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">

            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h3 class="mb-0">Eliminar Nómina</h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger display-4"></i>
                        <h4 class="mt-3 text-danger">¿Estás seguro de que deseas eliminar esta nómina?</h4>
                        <p class="lead">Esta acción es irreversible y no se puede deshacer.</p>
                    </div>

                    <hr />

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Nomina.Empleado):</dt>
                        <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.Nomina.Empleado.Nombre) @Html.DisplayFor(model => model.Nomina.Empleado.Apellido)</strong></dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Nomina.PeriodoInicio):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nomina.PeriodoInicio)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Nomina.PeriodoFin):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nomina.PeriodoFin)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Nomina.TotalPagado):</dt>
                        <dd class="col-sm-8">@Model.Nomina.TotalPagado.ToString("C")</dd> @* Formato de moneda *@
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Nomina.IdNomina" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger btn-lg" title="Confirmar eliminación">
                                <i class="bi bi-trash-fill me-2"></i>Eliminar
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary btn-lg" title="Cancelar eliminación">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}