@page
@model HRManager.Pages.Nominas.CreateModel
@{
    ViewData["Title"] = "Crear Nómina";
}

<h1>Crear Nómina</h1>

<p>Crear un nuevo registro de nómina.</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nomina.IdEmpleado" class="control-label"></label>
                <select asp-for="Nomina.IdEmpleado" class="form-control" asp-items="Model.EmpleadoList"></select>
                <span asp-validation-for="Nomina.IdEmpleado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nomina.PeriodoInicio" class="control-label"></label>
                <input asp-for="Nomina.PeriodoInicio" class="form-control" type="date" />
                <span asp-validation-for="Nomina.PeriodoInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nomina.PeriodoFin" class="control-label"></label>
                <input asp-for="Nomina.PeriodoFin" class="form-control" type="date" />
                <span asp-validation-for="Nomina.PeriodoFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nomina.TotalPagado" class="control-label"></label>
                <input asp-for="Nomina.TotalPagado" class="form-control" />
                <span asp-validation-for="Nomina.TotalPagado" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
