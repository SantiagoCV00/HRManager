@page "{id:int}"
@model HRManager.Pages.Cargos.EditModel
@{
    ViewData["Title"] = "Editar Cargo";
}

<h1>Editar Cargo</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Cargo.TituloCargo" class="control-label"></label>
        <input asp-for="Cargo.TituloCargo" class="form-control" />
        <span asp-validation-for="Cargo.TituloCargo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cargo.Descripcion" class="control-label"></label>
        <input asp-for="Cargo.Descripcion" class="form-control" />
        <span asp-validation-for="Cargo.Descripcion" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Cargo.IdCargo" />
    <button type="submit" class="btn btn-primary">💾 Guardar Cambios</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}