@page "{id:int}"
@model HRManager.Pages.Cargos.EditModel
@{
    ViewData["Title"] = "Editar Cargo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">Editar Cargo</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Cargo.IdCargo" />

                        <div class="form-floating mb-3">
                            <input asp-for="Cargo.TituloCargo" class="form-control" placeholder="Ingrese el título del cargo" />
                            <label asp-for="Cargo.TituloCargo">Título del Cargo</label>
                            <span asp-validation-for="Cargo.TituloCargo" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Cargo.Descripcion" class="form-control" placeholder="Ingrese una descripción" style="height: 100px"></textarea>
                            <label asp-for="Cargo.Descripcion">Descripción</label>
                            <span asp-validation-for="Cargo.Descripcion" class="text-danger mt-1"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success btn-lg">
                                Guardar Cambios
                            </button>
                            <a asp-page="Index" class="btn btn-secondary btn-lg">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}