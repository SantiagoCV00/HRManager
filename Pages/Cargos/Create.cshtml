@page
@model HRManager.Pages.Cargos.CreateModel
@{
    ViewData["Title"] = "Crear Cargo";
}

<h1 class="mb-4">Crear Cargo</h1>

<form method="post" class="shadow-sm p-4 bg-light rounded">
    <div class="form-group mb-3">
        <label asp-for="Cargo.TituloCargo" class="form-label fw-bold"></label>
        <input asp-for="Cargo.TituloCargo" class="form-control" />
        <span asp-validation-for="Cargo.TituloCargo" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Cargo.Descripcion" class="form-label fw-bold"></label>
        <input asp-for="Cargo.Descripcion" class="form-control" />
        <span asp-validation-for="Cargo.Descripcion" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-start gap-2">
        <button type="submit" class="btn btn-primary">💾 Guardar</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
