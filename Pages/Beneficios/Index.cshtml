@page
@model HRManager.Pages.Beneficios.IndexModel
@{
    ViewData["Title"] = "Lista de Beneficios";
}

<div class="container mt-4">
    <h1 class="mb-4">Lista de Beneficios</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary mb-3">Crear nuevo beneficio</a>
    </p>

    @if (Model.Beneficios == null || !Model.Beneficios.Any())
    {
        <div class="alert alert-info" role="alert">
            No hay beneficios registrados. ¡Crea uno nuevo para empezar!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Descripción</th>
                        <th>Costo para la empresa</th>
                        <th>Costo para el empleado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Beneficios)
                    {
                        <tr>
                            <td>@item.Descripcion</td>
                            <td>@item.CostoEmpresa.ToString("C")</td>
                            <td>@item.CostoEmpleado.ToString("C")</td>
                            <td class="text-center">
                                <a asp-page="Edit" asp-route-id="@item.IdBeneficio" class="btn btn-sm btn-success">Editar</a>
                                <a asp-page="Delete" asp-route-id="@item.IdBeneficio" class="btn btn-sm btn-danger ml-1">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>