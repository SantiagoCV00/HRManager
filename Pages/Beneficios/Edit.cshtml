@page
@model HRManager.Pages.Beneficios.EditModel
@{
    ViewData["Title"] = "Editar Beneficio";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">Editar Beneficio</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Beneficio.IdBeneficio" />

                        <div class="form-floating mb-3">
                            <input asp-for="Beneficio.Descripcion" class="form-control" placeholder="Ingrese la descripción del beneficio" />
                            <label asp-for="Beneficio.Descripcion">Descripción</label>
                            <span asp-validation-for="Beneficio.Descripcion" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Beneficio.CostoEmpresa" class="form-control" placeholder="Ingrese el costo para la empresa" />
                            <label asp-for="Beneficio.CostoEmpresa">Costo para la Empresa</label>
                            <span asp-validation-for="Beneficio.CostoEmpresa" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Beneficio.CostoEmpleado" class="form-control" placeholder="Ingrese el costo para el empleado" />
                            <label asp-for="Beneficio.CostoEmpleado">Costo para el Empleado</label>
                            <span asp-validation-for="Beneficio.CostoEmpleado" class="text-danger mt-1"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success btn-lg">
                                Guardar
                            </button>
                            <a asp-page="Index" class="btn btn-secondary btn-lg">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}