@page
@model HRManager.Pages.Empleados.IndexModel
@{
    ViewData["Title"] = "Lista de Empleados";
}

<h1>Lista de Empleados</h1>

<p>
    <a asp-page="Create">Crear nuevo empleado</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Fecha Contratación</th>
            <th>Salario</th>
            <th>Cargo</th>
            <th>Departamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Empleados)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Email</td>
                <td>@item.Telefono</td>
                <td>@item.FechaContratacion.ToShortDateString()</td>
                <td>@item.Salario.ToString("C")</td>
                <td>@item.Cargo.TituloCargo</td>
                <td>@item.Departamento.NombreDepartamento</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.IdEmpleado">Editar</a> |
                    <a asp-page="Delete" asp-route-id="@item.IdEmpleado">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
