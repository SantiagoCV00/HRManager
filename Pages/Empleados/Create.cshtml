@page
@model HRManager.Pages.Empleados.CreateModel
@{
    ViewData["Title"] = "Crear Empleado";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7"> @* Adjusted column width for more fields *@
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">Crear Nuevo Empleado</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Empleado.Nombre" class="form-control" placeholder="Ingrese el nombre" />
                                    <label asp-for="Empleado.Nombre">Nombre</label>
                                    <span asp-validation-for="Empleado.Nombre" class="text-danger mt-1"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Empleado.Apellido" class="form-control" placeholder="Ingrese el apellido" />
                                    <label asp-for="Empleado.Apellido">Apellido</label>
                                    <span asp-validation-for="Empleado.Apellido" class="text-danger mt-1"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Empleado.Email" class="form-control" placeholder="Ingrese el email" />
                            <label asp-for="Empleado.Email">Email</label>
                            <span asp-validation-for="Empleado.Email" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Empleado.Telefono" class="form-control" placeholder="Ingrese el teléfono" />
                            <label asp-for="Empleado.Telefono">Teléfono</label>
                            <span asp-validation-for="Empleado.Telefono" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Empleado.FechaContratacion" class="form-control" type="date" placeholder="Fecha de contratación" />
                            <label asp-for="Empleado.FechaContratacion">Fecha de Contratación</label>
                            <span asp-validation-for="Empleado.FechaContratacion" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Empleado.Salario" class="form-control" placeholder="Ingrese el salario" />
                            <label asp-for="Empleado.Salario">Salario</label>
                            <span asp-validation-for="Empleado.Salario" class="text-danger mt-1"></span>
                        </div>

                        <div class="mb-3"> Using mb-3 for spacing for select elements 
                            <label asp-for="Empleado.IdCargo" class="form-label fw-bold">Cargo</label>
                            <select asp-for="Empleado.IdCargo" class="form-select" asp-items="Model.CargoTitulo">
                                <option value="">-- Seleccione un Cargo --</option>
                            </select>
                            <span asp-validation-for="Empleado.IdCargo" class="text-danger mt-1"></span>
                        </div>

                        <div class="mb-4"> Using mb-4 for spacing for select elements and last input before buttons 
                            <label asp-for="Empleado.IdDepartamento" class="form-label fw-bold">Departamento</label>
                            <select asp-for="Empleado.IdDepartamento" class="form-select" asp-items="Model.DepartamentoNombre">
                                <option value="">-- Seleccione un Departamento --</option>
                            </select>
                            <span asp-validation-for="Empleado.IdDepartamento" class="text-danger mt-1"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus-fill me-2"></i>Crear
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}