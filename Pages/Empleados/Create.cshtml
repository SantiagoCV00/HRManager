@* HRManager/Pages/Empleados/Create.cshtml *@
@page
@model HRManager.Pages.Empleados.CreateModel
@{
    ViewData["Title"] = "Crear Empleado";
}

<h1>Crear Empleado</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Empleado.Nombre" class="control-label"></label>
        <input asp-for="Empleado.Nombre" class="form-control" />
        <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Empleado.Apellido" class="control-label"></label>
        <input asp-for="Empleado.Apellido" class="form-control" />
        <span asp-validation-for="Empleado.Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Empleado.Email" class="control-label"></label>
        <input asp-for="Empleado.Email" class="form-control" />
        <span asp-validation-for="Empleado.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Empleado.Telefono" class="control-label"></label>
        <input asp-for="Empleado.Telefono" class="form-control" />
        <span asp-validation-for="Empleado.Telefono" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Empleado.FechaContratacion" class="control-label"></label>
        <input asp-for="Empleado.FechaContratacion" class="form-control" type="date" />
        <span asp-validation-for="Empleado.FechaContratacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Empleado.Salario" class="control-label"></label>
        <input asp-for="Empleado.Salario" class="form-control" />
        <span asp-validation-for="Empleado.Salario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Empleado.IdCargo" class="control-label"></label>
        <select asp-for="Empleado.IdCargo" class="form-control" asp-items="Model.CargoTitulo"></select>
        <span asp-validation-for="Empleado.IdCargo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Empleado.IdDepartamento" class="control-label"></label>
        <select asp-for="Empleado.IdDepartamento" class="form-control" asp-items="Model.DepartamentoNombre"></select>
        <span asp-validation-for="Empleado.IdDepartamento" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" value="Crear" class="btn btn-primary me-2">Crear</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
