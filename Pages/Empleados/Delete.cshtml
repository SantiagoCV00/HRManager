@page
@model HRManager.Pages.Empleados.DeleteModel
@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            @* Adjusted column width for better presentation *@
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h3 class="mb-0">Eliminar Empleado</h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger display-4"></i>
                        <h4 class="mt-3 text-danger">¿Estás seguro de que deseas eliminar a este empleado?</h4>
                        <p class="lead">Esta acción es irreversible y no se puede deshacer.</p>
                    </div>

                    <hr />

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Empleado.Nombre):</dt>
                        <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.Empleado.Nombre)</strong></dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Empleado.Apellido):</dt>
                        <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.Empleado.Apellido)</strong></dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Empleado.Email):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Empleado.Email)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Empleado.Telefono):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Empleado.Telefono)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Empleado.FechaContratacion):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Empleado.FechaContratacion)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Empleado.Salario):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Empleado.Salario)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Empleado.Cargo):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Empleado.Cargo.TituloCargo)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Empleado.Departamento):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Empleado.Departamento.NombreDepartamento)</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Empleado.IdEmpleado" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger btn-lg" title="Confirmar eliminación">
                                <i class="bi bi-trash-fill me-2"></i>Eliminar
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary btn-lg" title="Cancelar eliminación">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}